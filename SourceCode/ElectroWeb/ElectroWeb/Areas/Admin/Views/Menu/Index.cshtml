@model IEnumerable<ElectroWeb.Models.EntityFramework.Menu>
@{
    ViewBag.Title = "Quản lý menu";
    Layout = "~/Areas/admin/Views/Shared/_Layout.cshtml";
}

@section NavigationHeader{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/Menu" class="nav-link">Menu</a>
        </li>
    </ul>
}
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Menu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Menu</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 style="text-align:center">Danh sách Menu</h3>

            <div class="card-tools">
                <a href="/admin/menu/add" class="btn btn-primary">Thêm</a>
            </div>
        </div>
        <div class="card-body">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên danh mục menu</th>
                            <th>Thứ tự</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>
                         }else{
                            <tr>
                                <td colspan="4">Không có dữ liệu hiển thị.</td>
                            </tr>
                         }
                        </tbody>
                </table>

        </div>
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
