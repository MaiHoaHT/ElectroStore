@model IEnumerable<ElectroWeb.Models.EntityFramework.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Sản phẩm mới</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                @foreach (var item in Model)
                                {
                                    <li id="show_@item.Alias"><a data-toggle="tab" href="#@item.Alias">@item.Title</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- /section title -->
                            @foreach (var item in Model)
                            {
                                <div id="@item.Alias" class="tab-pane">
                                    <div class="products-slick" data-nav="#slick-@item.Alias">
                                        @Html.Action("ProductItemsByCateID", "Product", new { alias = item.Alias })
                                    </div>
                                    <div id="slick-@item.Alias" class="products-slick-nav"></div>
                                </div>
                                <!-- Products tab & slick -->
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<script>
        window.onload = function () {
            var defaultTab = document.getElementById('show_laptop');
            var defaultTabshow = document.getElementById('laptop');
                defaultTabshow.classList.add("active");
            defaultTab.classList.add("active");

            var defaultTabSale = document.getElementById('saleTab_laptop');
            var defaultTabshowSale = document.getElementById('sale_laptop');
            defaultTabshowSale.classList.add("active");
            defaultTabSale.classList.add("active");
            };
</script>
