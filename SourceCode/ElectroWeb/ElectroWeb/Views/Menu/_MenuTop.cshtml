@model IEnumerable<ElectroWeb.Models.EntityFramework.Menu>
@{
    string rootPath = Context.Request.Path;
}
@if (Model != null && Model.Any())
    {
        foreach (var menu in Model)
        {
            var aliaspath = "/" + menu.Alias;
            //if (menu.Position == 1)
            if (rootPath == aliaspath)
            {
                <li class="active"><a href="/@menu.Alias">@menu.Title</a></li>
            }
            else
            {
                <li><a href="/@menu.Alias">@menu.Title</a></li>
            }
        }
    }

