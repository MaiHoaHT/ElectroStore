@model IEnumerable<ElectroWeb.Models.EntityFramework.ProductCategory>

@if (Model != null && Model.Any())
{
    <div class="section">
        <!-- container -->
        <div class="container">
            <!-- row -->
            <div class="row">

                <!-- section title -->
                <div class="col-md-12">
                    <div class="section-title">
                        <h3 class="title">Sản phẩm bán chạy</h3>
                        <div class="section-nav">
                            <ul class="section-tab-nav tab-nav">
                                @foreach (var item in Model)
                                {
                                    <li id="saleTab_@item.Alias"><a data-toggle="tab" href="#sale_@item.Alias">@item.Title</a></li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- /section title -->
                <!-- Products tab & slick -->
                <div class="col-md-12">
                    <div class="row">
                        <div class="products-tabs">
                            <!-- tab -->
                            @foreach (var item in Model)
                            {
                                <div id="sale_@item.Alias" class="tab-pane">
                                    <div class="products-slick" data-nav="#slick-nav-2">
                                        @Html.Action("ProductItemsSaleByCateID", "Product", new { alias = item.Alias })
                                    </div>
                                    <div id="slick-nav-2" class="products-slick-nav"></div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
}
