    <style>
        .btn-login {
            width: 100%;
            border-radius: 100px / 50px;
            font-size: 15px;
        }

        .btn-form__submit {
            cursor: pointer;
            display: block;
            border: .5px solid hsla(0,0%,46.7%,.5);
            box-shadow: 0 4px 4px rgba(255,0,0,.2);
            border-radius: 25px;
            color: #fff;
            padding: 11px 0;
        }

        input {
            border: none !important;
            background-color: #E9ECEF !important;
        }

        label {
            font-weight: 500;
        }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/Content/assets/img/loginLogo.png" class="mx-auto d-block mt-2" style="width: 15%" alt="Logo login">

        <h3 class="text-center mt-4">ĐĂNG KÝ</h3>

        <form>
            <!-- name -->
            <div class="form-group mx-auto d-block mt-4" style="width: 50%;">
                <label for="name">Họ và tên</label>
                <div class="input-group mb-3">
                    <input id="name" type="text" class="form-control bg-light" placeholder="Nhập họ và tên">
                </div>
            </div>

            <!-- email -->
            <div class="form-group mx-auto d-block mt-2" style="width: 50%;">
                <label for="email">Email</label>
                <div class="input-group mb-3">
                    <input id="email" type="email" class="form-control bg-light" placeholder="Nhập địa chỉ mail">
                </div>
            </div>

            <!-- phone -->
            <div class="form-group mx-auto d-block mt-2" style="width: 50%;">
                <label for="phone">Số điện thoại</label>
                <div class="input-group mb-3">
                    <input id="phone" type="text" class="form-control bg-light" placeholder="Nhập số điện thoại">
                </div>
            </div>

            <!-- password -->
            <div class="form-group mx-auto d-block mt-2 size" style="width: 50%;">
                <label for="pass">Mật khẩu</label>
                <div class="row">
                    <div class="col">
                        <input id="pass" type="password" class="form-control bg-light" placeholder="Nhập mật khẩu">
                    </div>
                    <div class="col">
                        <input id="confirm-pass" type="password" class="form-control bg-light" placeholder="Xác nhận mật khẩu">
                    </div>
                </div>
            </div>

            <div class="form-group mx-auto d-block mt-2 input-checkbox" style="width: 50%;">
                <input type="checkbox" id="terms">
                <label for="terms">
                    <span></span>
                    Tôi đồng ý với các <a href="#"><u>điều khoản</u></a> của cửa hàng
                </label>
            </div>

            <div class="form-group mx-auto d-block mt-4" style="width: 50%;">
                <button class="btn btn-danger btn-login font-weight-bold btn-form__submit">ĐĂNG KÝ</button>
            </div>

            <div class="form-group mx-auto d-block mt-2 text-center" style="width: 50%;">
                <label for="terms">
                    <span></span>
                    <p class="font-weight-normal">Bạn đã có tài khoản? <a class="font-weight-bold" href="./Login">Đăng nhập ngay</a></p>
                </label>
            </div>
        </form>
    </div>

    <script src="~/Content/assets/js/jquery.min.js"></script>
    <script src="~/Content/assets/js/bootstrap.min.js"></script>
    <script src="~/Content/assets/js/slick.min.js"></script>
    <script src="~/Content/assets/js/nouislider.min.js"></script>
    <script src="~/Content/assets/js/jquery.zoom.min.js"></script>
    <script src="~/Content/assets/js/main.js"></script>
</body>
</html>

