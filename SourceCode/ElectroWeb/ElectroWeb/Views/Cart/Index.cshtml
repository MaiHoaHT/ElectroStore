        <div class="col-md-12" id="load_data">
            @Html.Action("Show_Cart_Items", "Cart")
        </div>
        <div class="col-md-12">
            @if (ViewBag.CheckCart != null)
            {
                <div class="text-right cart-btns">
                    <a href="#" class="btn btn-danger btnDeleteAll">Xóa hết</a>
                    <a href="/thanh-toan" class="btn btn-success">Thanh toán <i class="fa fa-arrow-circle-right"></i></a>
                </div>
            }
        </div>
    </div>
</div>
